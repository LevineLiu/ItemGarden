<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/message_user_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/message_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/message_user_avatar"
        android:layout_marginLeft="15dp"
        android:text="hello"/>
    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="10小时前"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/message_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="消息"
        android:layout_below="@id/message_user_name_tv"
        android:layout_toRightOf="@id/message_user_avatar"
        android:layout_toLeftOf="@id/message_time_tv"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/message_user_avatar"
        android:gravity="center_vertical"
        android:singleLine="true"/>

</RelativeLayout>