<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include
        layout="@layout/login_register_title_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="请输入您手机收到的短信校验码"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/identify_code_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mini_input_bg_corner"
            android:textSize="13sp"
            android:hint="短信校验码"
            android:paddingLeft="5dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/get_code_tv"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/mini_smsbtn_disable"
            android:text="重发校验码"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>
        </LinearLayout>
    <TextView
        android:id="@+id/identify_code_next_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_bg"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:gravity="center" />

</LinearLayout>